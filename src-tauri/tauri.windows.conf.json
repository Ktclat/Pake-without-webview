{
  "bundle": {
    "icon": ["png/weekly_256.ico", "png/weekly_32.ico"],
    "active": true,

    // ✅ 包含 WebView2 运行时文件夹
    "resources": [
      "png/weekly_32.ico",
      "WebView2Runtime/**/*"
    ],

    // ✅ 生成解压即用的版本（不再是 msi）
    "targets": ["app"],

    "windows": {
      "digestAlgorithm": "sha256"
    }
  },

  // ✅ 新增字段：固定 WebView2 路径
  "tauri": {
    "windows": [
      {
        "webviewFixedRuntimePath": "WebView2Runtime"
      }
    ]
  }
}
